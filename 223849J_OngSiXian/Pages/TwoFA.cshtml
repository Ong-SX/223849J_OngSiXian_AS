@page
@model _223849J_OngSiXian.Pages.TwoFAModel
@{
}

<div class="container">
    <h2>Two Factor Authentication</h2>
    <form method="post" asp-antiforgery="true" ValidateRequest="true">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label class="form-label" asp-for="twoFA.Code">Verification code</label>
            <input type="email" class="form-control" asp-for="twoFA.Code" placeholder="Enter code">
            <span class="text-danger" asp-for="twoFA.Code"></span>
        </div>

        <div class="checkbox">
            <label><input type="checkbox" asp-for="twoFA.RememberMe"> Remember me</label>
        </div>

        <button type="submit" class="btn btn-success">Verify</button>
    </form>
</div>